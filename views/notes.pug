doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      link(rel='stylesheet' href='/css/style.css')
      link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css'  integrity='sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l' crossorigin='anonymous')
      link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.8.2/css/all.css' integrity='sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay' crossorigin='anonymous')
      title EasyNotes

    body
        .container.mt-4.py-4
            .row
                .col-md-6.offset-md-3
                    h1.text-center EasyNotes
                    .todo.card
                        .card-body
                            form( action=`/notes` method="POST" class="todo-header needs-validation" novalidate)
                                .form-group.mb-2
                                    label(class="sr-only" for="title") Note Title
                                    input(class="form-control" type="text" id="title" name="title"
                                        placeholder="Note Title")
                                
                                .form-group.mb-2
                                    label(class="sr-only" for="content") Note content
                                    input(class="form-control" type="text" id="content" name="content"
                                        placeholder="Note content" required)
                                    .invalid-feedback Please enter a Note.
                                
                                button(class="btn btn-primary mb-2 ml-auto d-block" type="submit") Add Task

                            ul.list-unstyled
                                each note in notes
                                    li
                                        span.title=note.title
                                        span.content=note.content
                                        a( href=`/notes/${note._id}`)
                                            span.fas.fa-edit
                                        a( href=``)
                                            span.fas.fa-trash-alt.text-danger

    script(src="/js/validate.js")